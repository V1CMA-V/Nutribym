---
import Layout from '@/layouts/Layout.astro'
import HeroContainer from '@/components/HeroContainer.astro'
---

<Layout title="Contacto" description="Contacta conmigo">
  <HeroContainer img="nutriologo.webp">
    <h1
      class="lg:text-6xl text-5xl text-center uppercase tracking tracking-widest font-semibold font-fugazOne"
    >
      Contacto
    </h1>
  </HeroContainer>
  <main
    class="mx-auto mb-28 max-w-7xl selection:bg-primary selection:text-secondary pt-20 md:pt-32 lg:px-10"
  >
    <div
      class="flex flex-col lg:flex-row justify-center lg:justify-between px-20 items-center text-pretty gap-10 lg:gap-5"
    >
      <div class="w-full text-center">
        <h4 class="text-2xl font-semibold text-center mb-5">
          Nuestros Horarios
        </h4>
        <div>
          <p class="text-white font-semibold text-lg">
            Consultas Presenciales y en Línea
          </p>
          <p>
            Lunes a Viernes <br />
            9:00 AM a 2:00 PM <br />
            Sábados <br />
            2:00 PM a 5:00 PM.
          </p>
        </div>
        <div>
          <p class="text-white font-semibold text-lg">
            Entrenamientos en Línea
          </p>
          <p>
            Lunes a Jueves<br />
            2:00 PM a 7:00 PM<br />
            Sábados<br />
            9:00 AM a 2:00 PM.
          </p>
        </div>
        <div class="flex flex-col">
          <a
            href="https://wa.me/2216620552?text=Hola,%20estoy%20interesado(a)%20en%20los%20servicios%20de%20adiestramiento%20de%20perros%20y%20me%20gustar%C3%ADa%20obtener%20m%C3%A1s%20informaci%C3%B3n.%20%C2%BFPodr%C3%ADan%20proporcionarme%20detalles%20sobre%20los%20programas%20disponibles,%20precios%20y%20disponibilidad?%20Gracias."
            class="hover:underline hover:text-[#075E54] transition-colors"
            target="_blank"
            rel="noopener noreferrer">Whatsapp: 221 662 0552</a
          >
          <a
            href="https://maps.app.goo.gl/TGYWeef7goiwqRZo9"
            class="hover:underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            Dirección:C. 7 Sur 2101, Héroe de Nacozari, 72423 <br />Heroica
            Puebla de Zaragoza, Pue.
          </a>
        </div>
      </div>
      <div class="w-full">
        <h4 class="text-center font-semibold text-2xl">Envia un Correo</h4>

        <form class="max-w-md mx-auto">
          <div class="relative z-0 w-full mb-5 group">
            <input
              type="email"
              name="floating_email"
              id="floating_email"
              class="block py-2.5 px-0 w-full text-sm text-white bg-transparent border-0 border-b-2 border-orange-200 appearance-none focus:outline-none focus:ring-0 focus:border-orange-300 peer"
              placeholder=" "
              required
            />
            <label
              for="floating_email"
              class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-300 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
              >Nombre</label
            >
          </div>
          <div class="relative z-0 w-full mb-5 group">
            <input
              type="password"
              name="floating_password"
              id="floating_password"
              class="block py-2.5 px-0 w-full text-sm text-white bg-transparent border-0 border-b-2 border-orange-200 appearance-none focus:outline-none focus:ring-0 focus:border-orange-300 peer"
              placeholder=" "
              required
            />
            <label
              for="floating_password"
              class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-300 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
              >Correo Electronico</label
            >
          </div>
          <div class="relative z-0 w-full mb-5 group">
            <input
              type="text"
              name="repeat_password"
              id="floating_repeat_password"
              class="block py-2.5 px-0 w-full text-sm text-white bg-transparent border-0 border-b-2 border-orange-200 appearance-none focus:outline-none focus:ring-0 focus:border-orange-300 peer"
              placeholder=" "
              required
            />
            <label
              for="floating_repeat_password"
              class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-300 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
              >Asunto</label
            >
          </div>

          <div class="relative z-0 w-full mb-5 group">
            <div class="relative z-0 w-full mb-5 group">
              <label
                for="message"
                class="block mb-2 text-sm font-medium text-gray-500"
                >Mensaje</label
              >
              <textarea
                id="message"
                rows="4"
                class="block py-2.5 px-0 w-full text-sm text-white bg-transparent border-0 border-b-2 border-orange-200 appearance-none focus:outline-none focus:ring-0 focus:border-orange-300 peer"
                placeholder="Escribe tu mensaje aquí."></textarea>
            </div>
          </div>
          <button
            type="submit"
            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            >Submit</button
          >
        </form>
      </div>
    </div>
  </main>
  <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d942.8897568780008!2d-98.20842153038089!3d19.039143566625953!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85cfc0c51db603af%3A0x82c2848a2aed40e5!2sC.%207%20Sur%202101%2C%20H%C3%A9roe%20de%20Nacozari%2C%2072423%20Heroica%20Puebla%20de%20Zaragoza%2C%20Pue.!5e0!3m2!1sen!2smx!4v1719177800699!5m2!1sen!2smx"
    height="450"
    class="w-full"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</Layout>
